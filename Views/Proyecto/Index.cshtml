@model IEnumerable<App_ventas_ds500.Models.Proyecto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de proyecto</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Proyecto"
               asp-action="Create">Agregar proyecto</a>
        </div>
    </div>
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(pro => pro.proyecto)</td>
                        <td>@Html.DisplayNameFor(pro => pro.descripcion)</td>
                        <td>@Html.DisplayNameFor(pro => pro.fecha_inicio)</td>
                        <td>@Html.DisplayNameFor(pro => pro.fecha_fin)</td>
                        <td>@Html.DisplayNameFor(pro => pro.estado_proyecto)</td>
                        <td>@Html.DisplayNameFor(pro => pro.precio)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reg in Model)

                    {
                        <tr>
                            <td>@reg.proyecto</td>
                            <td>@reg.descripcion</td>
                            <td>@reg.fecha_inicio</td>
                            <td>@reg.fecha_fin</td>
                            <td>@reg.estado_proyecto</td>
                            <td>@reg.precio</td>
                            <td>
                                <a asp-controller="Proyecto" asp-action="Edit"
                                   asp-route-id="@reg.codigo_proyecto"
                                   class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i>Editar</a>
                            </td>
                            <td>
                                <a asp-controller="Proyecto" asp-action="Delete"
                                   asp-route-id="@reg.codigo_proyecto"
                                   class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i>Borrar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existe registros</p>
        }

    </div>
</div>

